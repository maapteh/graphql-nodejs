{
    "name": "graphql-nodejs",
    "version": "0.0.1",
    "main": "dist/index.js",
    "license": "UNLICENSED",
    "description": "GraphQL modules",
    "engines": {
        "node": ">=14"
    },
    "repository": "",
    "scripts": {
        "dev": "PROFILE=tst LOG_LEVEL=warn PORT=4000 PROXY='' MOCK=off CACHING=off MEMCACHE=off PLAYGROUND=on TRACING=on PROMETHEUS=off PRODUCTION=off ts-node-dev -r tsconfig-paths/register --respawn --inspect --transpileOnly ./src/index.ts",
        "start": "NODE_ENV=production node dist/src/index.js",
        "-------- BUILDING ------": "------------------------------",
        "compile": "tsc -v && NODE_ENV=production && tsc -p tsconfig.build.json",
        "build": "yarn compile && yarn copy:schemas && yarn copy:mocks",
        "copy:schemas": "cd src && find . -name '*.graphql' | xargs tar cvf - | (cd ../dist/src; tar xfp -)",
        "copy:mocks": "cp src/__mocks__/*.json dist/src/__mocks__",
        "schema:linter": "graphql-schema-linter",
        "-------- TESTING ------": "------------------------------------------",
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config=jest.config.js",
        "test:watch": "yarn test --watch --notify",
        "test:coverage": "yarn test --collectCoverage",
        "test:watch-coverage": "yarn test --watchAll --notify --collectCoverage",
        "---- auto generating ---": "------------------------------",
        "generate:gql-typings": "graphql-codegen"
    },
    "_moduleAliases": {
        "@app": "dist/src"
    },
    "dependencies": {
        "@graphql-tools/load-files": "6.2.5",
        "@graphql-tools/merge": "6.2.6",
        "@types/luxon": "1.24.4",
        "abort-controller": "3.0.0",
        "apollo-cache-control": "0.11.1",
        "apollo-server": "2.16.1",
        "apollo-server-cache-redis": "1.2.2",
        "apollo-server-express": "2.16.1",
        "apollo-server-plugin-response-cache": "0.5.3",
        "atob": "2.1.2",
        "dataloader": "2.0.0",
        "express": "4.17.1",
        "graphql": "15.4.0",
        "graphql-jit": "0.4.3",
        "graphql-modules": "1.0.0",
        "graphql-query-complexity": "0.6.0",
        "graphql-scalars": "1.4.1",
        "graphql-voyager": "1.0.0-rc.31",
        "https-proxy-agent": "5.0.0",
        "luxon": "1.25.0",
        "module-alias": "2.2.2",
        "node-fetch": "2.6.0",
        "pino": "6.8.0",
        "prom-client": "12.0.0",
        "reflect-metadata": "0.1.13",
        "tiny-lru": "7.0.6"
    },
    "devDependencies": {
        "0x": "4.9.1",
        "@graphql-codegen/add": "2.0.2",
        "@graphql-codegen/cli": "1.19.4",
        "@graphql-codegen/schema-ast": "1.18.1",
        "@graphql-codegen/time": "2.0.2",
        "@graphql-codegen/typescript": "1.19.0",
        "@graphql-codegen/typescript-resolvers": "1.18.0",
        "@graphql-inspector/cli": "2.3.0",
        "@graphql-inspector/config": "^2.2.0",
        "@types/cookie-parser": "1.4.2",
        "@types/express": "4.17.6",
        "@types/jest": "26.0.0",
        "@types/node-fetch": "2.5.7",
        "@types/pino": "6.3.0",
        "@types/uuid": "8.0.0",
        "blocked": "1.3.0",
        "dtsgenerator": "2.5.0",
        "graphql-schema-linter": "0.5.0",
        "inquirer": "7.3.3",
        "jest": "26.0.1",
        "open": "7.0.4",
        "pino-pretty": "4.1.0",
        "pm2": "4.4.0",
        "prettier": "2.2.1",
        "simple-git": "2.4.0",
        "ts-jest": "26.1.3",
        "ts-node": "8.10.2",
        "ts-node-dev": "1.0.0-pre.49",
        "tsconfig-paths": "3.9.0",
        "typescript": "3.9.7"
    },
    "graphql-inspector": {
        "diff": true,
        "schema": {
            "ref": "master",
            "path": "_schema.graphql"
        }
    }
}
